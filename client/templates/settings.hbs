{{#modal-dialog action="close" header="Settings"}}
	<div class="modal-body">
		<div class="left-set">
			{{#if showSettingsForm}}
			hey
			{{/if}}
			{{#if showPasswordForm}}
				<form method="post" {{action "passwordSubmit" on="submit"}}>
					<p class="large">You can use the form below to update your current password.</p>
					{{#if errors}}
						<div class="alert-message block-message error">
							<ul>
								{{#each errors}}
								<li>{{this.error}}</li>
								{{/each}}
							</ul>
						</div>
					{{/if}}
					{{#if success}}
						<div class="alert-message block-message success"><p>{{success}}</p></div>
					{{/if}}
					<div class="clearfix">
						<label for="password">Current Password</label>
						<div class="input">
							<div class="field">
								{{input type="password" class="xlarge" valueBinding="model.password" value=password tabindex="1"}}
							</div>
							<span class="tooltip">
								<a href="#" rel="twipsy" title="Your current password">?</a>
							</span>
						</div>
					</div>
					<div class="clearfix">
						<label for="password">New Password</label>
						<div class="input">
							<div class="field">
								{{input type="password" class="xlarge" valueBinding="model.newPassword" value=newPassword tabindex="2"}}
							</div>
							<span class="tooltip">
								<a href="#" rel="twipsy" title="Your new password, longer than 6 characters.">?</a>
							</span>
						</div>
					</div>
					<div class="clearfix">
						<div class="input">
							<div class="field">
								{{input type="submit" class="btn primary" value="Change Password" tabindex="3"}}
							</div>
						</div>
					</div>
				</form>
			{{/if}}
		</div>
		<div class="right-set">
			<ul class="setting-tabs">
				<li {{bind-attr class="showSettingsForm:active"}}><a href="#" {{action active "settings"}}>Settings</a></li>
				<li {{bind-attr class="showPasswordForm:active"}}><a href="#" {{action active "password"}}>Change Password</a></li>
			</ul>
		</div>
	</div>
	<div class="modal-footer">

	</div>
{{/modal-dialog}}