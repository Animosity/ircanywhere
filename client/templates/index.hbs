<div id="banner">
	<div id="banner-inner" class="clear">
		<div class="banner-left">
			<h1>IRCAnywhere</h1>
			<h3>IRC on the web, no matter where you are.</h3>
			{{#link-to "signup" class="btn primary large"}}Sign up for a free account now{{/link-to}}
		</div>
		<div class="banner-right">
			<div id="login-box">
				<form method="post" id="login-form" {{action "loginSubmit" on="submit"}}><fieldset>
					<div class="box">
						<h5>Login</h5>
						
						<div id="login-error" {{bind-attr class="errors:show:hide"}}>
							<div class="alert-message block-message error">{{loginErrors}}</div>
						</div>
						
						<div class="field">
							{{view App.InputBlur class="login-input" value=email valueBinding="model.email" default="Email Address"}}
						</div>
						<div class="field">
							{{view App.InputBlur type="password" class="login-input" value=password valueBinding="model.password" default="Password"}}
						</div>
					</div>
					<div class="actions">
						{{input type="submit" class="btn primary" value="Login"}}
						<a href="#" id="forgot-password-link" class="btn secondary" {{action 'forgotPassword'}}>Forgot password?</a>
					</div>
				</fieldset></form>
				<form method="post" id="reset-form" {{action "resetSubmit" on="submit"}}><fieldset>
					<div id="forgot-password" {{bind-attr class=":box forgotPassword:show:hide"}}>
						<h5>Forgot Password</h5>

						<div id="reset-response">
							{{#if resetErrors}}
								<div class="alert-message block-message error">{{resetErrors}}</div>
							{{/if}}
							{{#if resetSuccess}}
								<div class="alert-message block-message success">{{resetSuccess}}</div>
							{{/if}}
						</div>

						<div class="field">
							{{view App.InputBlur type="text" class="login-input" value=resetEmail valueBinding="model.resetEmail" default="Email Address"}}
						</div>
					</div>
					<div id="forgot-password-actions" {{bind-attr class=":actions forgotPassword:show:hide"}}>
						{{input type="submit" class="btn primary" value="Reset"}}
					</div>
				</fieldset></form>
			</div>
		</div>
	</div>
</div>